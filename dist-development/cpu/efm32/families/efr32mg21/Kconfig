## Common CPU symbols
config CPU_FAM
    default "efr32mg21" if CPU_FAM_EFR32MG21

config CPU_MODEL
    default "efr32mg21b020f1024im32" if CPU_MODEL_EFR32MG21B020F1024IM32
    default "efr32mg21a010f512im32"  if CPU_MODEL_EFR32MG21A010F512IM32
    default "efr32mg21b020f512im32"  if CPU_MODEL_EFR32MG21B020F512IM32
    default "efr32mg21a020f1024im32" if CPU_MODEL_EFR32MG21A020F1024IM32
    default "efr32mg21a010f1024im32" if CPU_MODEL_EFR32MG21A010F1024IM32
    default "rm21z000f1024im32"      if CPU_MODEL_RM21Z000F1024IM32
    default "efr32mg21b020f768im32"  if CPU_MODEL_EFR32MG21B020F768IM32
    default "efr32mg21a010f768im32"  if CPU_MODEL_EFR32MG21A010F768IM32
    default "efr32mg21b010f1024im32" if CPU_MODEL_EFR32MG21B010F1024IM32
    default "efr32mg21a020f768im32"  if CPU_MODEL_EFR32MG21A020F768IM32
    default "efr32mg21b010f768im32"  if CPU_MODEL_EFR32MG21B010F768IM32
    default "efr32mg21b010f512im32"  if CPU_MODEL_EFR32MG21B010F512IM32
    default "efr32mg21a020f512im32"  if CPU_MODEL_EFR32MG21A020F512IM32
