config CPU_FAM_EFR32MG21
    bool
    select CPU_CORE_CORTEX_M33
    select CPU_COMMON_EFM32
    select HAS_PERIPH_HWRNG

## CPU Models
config CPU_MODEL_EFR32MG21B020F1024IM32
    bool
    select CPU_FAM_EFR32MG21

