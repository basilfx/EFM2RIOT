## Common CPU symbols
config CPU_FAM
    default "efr32bg14p" if CPU_FAM_EFR32BG14P

config CPU_MODEL
    default "efr32bg14p732f256gm32" if CPU_MODEL_EFR32BG14P732F256GM32
    default "efr32bg14p532f256gm48" if CPU_MODEL_EFR32BG14P532F256GM48
    default "efr32bg14p632f256gm48" if CPU_MODEL_EFR32BG14P632F256GM48
    default "efr32bg14p632f256im32" if CPU_MODEL_EFR32BG14P632F256IM32
    default "efr32bg14p632f256im48" if CPU_MODEL_EFR32BG14P632F256IM48
    default "efr32bg14p733f256gm48" if CPU_MODEL_EFR32BG14P733F256GM48
    default "efr32bg14p632f256gm32" if CPU_MODEL_EFR32BG14P632F256GM32
    default "efr32bg14p532f256gm32" if CPU_MODEL_EFR32BG14P532F256GM32
