config CPU_FAM_EFM32JG1B
    bool
    select CPU_CORE_CORTEX_M3
    select CPU_COMMON_EFM32

## CPU Models
config CPU_MODEL_EFM32JG1B200F256GM48
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B200F256IM32
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B100F256IM32
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B200F128GM48
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B200F128GM32
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B100F256GM32
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B200F256IM48
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B200F256GM32
    bool
    select CPU_FAM_EFM32JG1B

config CPU_MODEL_EFM32JG1B100F128GM32
    bool
    select CPU_FAM_EFM32JG1B

## Common CPU symbols
config CPU_FAM
    default "efm32jg1b" if CPU_FAM_EFM32JG1B

config CPU_MODEL
    default "efm32jg1b200f256gm48" if CPU_MODEL_EFM32JG1B200F256GM48
    default "efm32jg1b200f256im32" if CPU_MODEL_EFM32JG1B200F256IM32
    default "efm32jg1b100f256im32" if CPU_MODEL_EFM32JG1B100F256IM32
    default "efm32jg1b200f128gm48" if CPU_MODEL_EFM32JG1B200F128GM48
    default "efm32jg1b200f128gm32" if CPU_MODEL_EFM32JG1B200F128GM32
    default "efm32jg1b100f256gm32" if CPU_MODEL_EFM32JG1B100F256GM32
    default "efm32jg1b200f256im48" if CPU_MODEL_EFM32JG1B200F256IM48
    default "efm32jg1b200f256gm32" if CPU_MODEL_EFM32JG1B200F256GM32
    default "efm32jg1b100f128gm32" if CPU_MODEL_EFM32JG1B100F128GM32
