config CPU_FAM_EFR32MG1V
    bool
    select CPU_CORE_CORTEX_M4F
    select CPU_COMMON_EFM32

## CPU Models
config CPU_MODEL_EFR32MG1V131F256GM32
    bool
    select CPU_FAM_EFR32MG1V

config CPU_MODEL_EFR32MG1V132F256GM48
    bool
    select CPU_FAM_EFR32MG1V

config CPU_MODEL_EFR32MG1V132F256GM32
    bool
    select CPU_FAM_EFR32MG1V

config CPU_MODEL_EFR32MG1V131F256GM48
    bool
    select CPU_FAM_EFR32MG1V

## Common CPU symbols
config CPU_FAM
    default "efr32mg1v" if CPU_FAM_EFR32MG1V

config CPU_MODEL
    default "efr32mg1v131f256gm32" if CPU_MODEL_EFR32MG1V131F256GM32
    default "efr32mg1v132f256gm48" if CPU_MODEL_EFR32MG1V132F256GM48
    default "efr32mg1v132f256gm32" if CPU_MODEL_EFR32MG1V132F256GM32
    default "efr32mg1v131f256gm48" if CPU_MODEL_EFR32MG1V131F256GM48
