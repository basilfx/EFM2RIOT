## Common CPU symbols
config CPU_FAM
    default "efr32bg1p" if CPU_FAM_EFR32BG1P

config CPU_MODEL
    default "efr32bg1p332f256gj43" if CPU_MODEL_EFR32BG1P332F256GJ43
    default "efr32bg1p233f256gm48" if CPU_MODEL_EFR32BG1P233F256GM48
    default "efr32bg1p332f256gm32" if CPU_MODEL_EFR32BG1P332F256GM32
