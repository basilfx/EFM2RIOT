config CPU_FAM_EFR32FG14V
    bool
    select CPU_CORE_CORTEX_M4F
    select CPU_COMMON_EFM32
    select HAS_PERIPH_HWRNG

## CPU Models
config CPU_MODEL_EFR32FG14V132F256GM32
    bool
    select CPU_FAM_EFR32FG14V

config CPU_MODEL_EFR32FG14V132F256GM48
    bool
    select CPU_FAM_EFR32FG14V

## Common CPU symbols
config CPU_FAM
    default "efr32fg14v" if CPU_FAM_EFR32FG14V

config CPU_MODEL
    default "efr32fg14v132f256gm32" if CPU_MODEL_EFR32FG14V132F256GM32
    default "efr32fg14v132f256gm48" if CPU_MODEL_EFR32FG14V132F256GM48
