ifneq (,$(filter saul_default,$(USEMODULE)))
  USEMODULE += saul_gpio
  {% strip 2, "", 2 %}
    {% if board in ["slstk3301a", "slstk3401a", "slstk3402a", "slwstk6000b", "slwstk6220a"] %}
      USEMODULE += si7021
    {% endif %}
    {% if board in ["sltb001a"] %}
      USEMODULE += bmp280_i2c
      USEMODULE += ccs811
      {% strip 2 %}
        {% if development %}
          USEMODULE += icm_20648
          USEMODULE += si11x3
        {% endif %}
      {% endstrip %}
      USEMODULE += si7021
      {% strip 2 %}
        {% if development %}
          USEMODULE += si7210
        {% endif %}
      {% endstrip %}
    {% endif %}
  {% endstrip %}
endif

{% strip 2, "<", 2 %}
  {% if board in ["stk3200"] %}
    # limit the stack size so most tests and examples compile
    CFLAGS += -DTHREAD_STACKSIZE_DEFAULT=512
  {% endif %}
{% endstrip %}

# add board common drivers
USEMODULE += boards_common_silabs
{% strip 2, "", 2 %}
  {% if "aem" in features %}
    USEMODULE += silabs_aem
  {% endif %}
  {% if "bc" in features %}
    USEMODULE += silabs_bc
  {% endif %}
  {% if board in ["sltb001a"] %}
    USEMODULE += silabs_pic
  {% endif %}
{% endstrip %}

# include board common dependencies
include $(RIOTBOARD)/common/silabs/Makefile.dep
